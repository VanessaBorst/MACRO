{
  "_comment": "All paths need to be defined relative to the root directory. If the project is moved to another location, the root_directory method in util.py needs to be adapted ",
  "name": "CPSC_BaselineModel",
  "n_gpu": 1,
  "arch": {
    "type": "BaselineModel",
    "args": {}
  },
  "data_loader": {
    "type": "ECGDataLoader",
    "args": {
      "data_dir": "data/CinC_CPSC/preprocessed/without_sampling/",
      "batch_size": 4,
      "shuffle": true,
      "validation_split": 0.1,
      "num_workers": 1,
      "seq_len": 72000
    },
    "test_dir": "data/CinC_CPSC/preprocessed/without_sampling/ReaddLater"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "nll_loss",
  "metrics": [
    "old_accuracy",
    "old_top_k_acc"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}
