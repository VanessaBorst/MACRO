{
  "name": "FinalModel",
  "run_details": "_cross_validation_withFC_0.2_12_16",
  "n_gpu": 1,
  "arch": {
    "type": "FinalModel",
    "args": {
      "apply_final_activation": false,
      "multi_label_training": true,

      "down_sample": "conv",
      "vary_channels": true,
      "pos_skip": "all",

      "norm_before_act": true,
      "norm_pos": "all",
      "norm_type": "BN",

      "use_pre_activation_design": true,
      "use_pre_conv": true,
      "pre_conv_kernel": 16,

      "discard_FC_before_MH": false,
      "dropout_attention": 0.2,
      "gru_units": 12,
      "heads": 16
    }
  },
  "data_loader": {
    "type": "ECGDataLoader",
    "cross_valid": {
      "enabled": true,
      "k_fold": 10,
      "data_dir": "data/CinC_CPSC/cross_valid/"
    },
    "args": {
      "data_dir": "data/CinC_CPSC/train/preprocessed/no_sampling/eq_len_72000",
      "batch_size": 64,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 4,
      "pin_memory": false
    },
    "overfit_single_batch": false,
    "test_dir": "data/CinC_CPSC/test/preprocessed/no_sampling/eq_len_72000"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": false
    }
  },
  "loss": {
    "type": "BCE_with_logits",
    "add_args": []
  },
  "metrics": {
    "sl": {
      "per_iteration": {
        "sk_accuracy": ["log_probs", "logits"]
      },
      "per_epoch": [
        "cpsc_score",
        "weighted_sk_f1",
        "macro_sk_f1"
      ],
      "per_epoch_class_wise": [
        "class_wise_sk_f1"
      ]
    },
    "ml": {
      "per_iteration": {
        "sk_subset_accuracy": ["sigmoid_probs", "logits"]
      },
      "per_epoch": [
        "cpsc_score",
        "weighted_sk_f1",
        "macro_sk_f1"
      ],
      "per_epoch_class_wise": [
        "class_wise_sk_f1"
      ]
    },
    "additional_metrics_args": {
      "sigmoid_probs": false,
      "log_probs": false,
      "logits": true
    }
  },
  "lr_scheduler": {
    "active": false,
    "type": "ReduceLROnPlateau",
    "args": {
      "mode": "max",
      "factor": 0.1,
      "patience": 10,
      "threshold": 0.0001,
      "threshold_mode": "rel"
    }
  },
  "trainer": {
    "epochs": 300,
    "save_dir": "savedVM_v2/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_macro_sk_f1",
    "early_stop": 20,
    "tensorboard": true,
    "try_run": false,
    "profiler_active": false
  }
}
