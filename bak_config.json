{
  "_comment": "All paths need to be defined relative to the root directory. If the project is moved to another location, the root_directory method in util.py needs to be adapted ",
  "name": "CPSC_BaselineModel",
  "n_gpu": 1,
  "arch": {
    "type": "BaselineModel",
    "args": {}
  },
  "data_loader": {
    "type": "ECGDataLoader",
    "args": {
      "data_dir": "data/CinC_CPSC/train/preprocessed/no_sampling/",
      "batch_size": 2,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 1,
      "seq_len": 72000
    },
    "test_dir": "data/CinC_CPSC/test/preprocessed/no_sampling/"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.0001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "BCE",
  "metrics": {
    "old_accuracy": {
      "requires_args": false,
      "args": {}
    },
    "old_top_k_acc": {
      "requires_args": false,
      "args": {}
    },
    "class_wise_f1": {
      "requires_args": true,
      "arg_list":  [
        "log_probs",
        "labels"
      ]
    }
  },
  "metrics": {
        "per_iteration": ["old_accuracy, old_top_k_acc"],
        "per_epoch": ["class_wise_f1","TPR", "PPV", "AUROC", "AUPRC"],
        "pick_threshold": {
            "is_ftn": true,
            "type": "Youden_J",
            "kwargs": {
                "beta": 1.0
            }
        }
    },
  "metrics_deprecated": [
    "old_accuracy",
    "old_top_k_acc",
    "class_wise_f1"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 10,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "overfit_single_batch": false,
    "tensorboard": true
  }
}
