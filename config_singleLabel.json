{
  "name": "CPSC_BaselineModel",
  "n_gpu": 1,
  "arch": {
    "type": "BaselineModelWoRnnWoAttentionSingleLabel",
    "args": {}
  },
  "data_loader": {
    "type": "ECGDataLoader",
    "args": {
      "data_dir": "data/CinC_CPSC/train/preprocessed/no_sampling/minmax",
      "batch_size": 8,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 1,
      "seq_len": 72000
    },
    "overfit_single_batch": true,
    "test_dir": "data/CinC_CPSC/test/preprocessed/no_sampling/minmax"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.0001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "nll_loss",
  "metrics": {
    "per_iteration": [
      "accuracy",
      "top_k_acc"
    ],
    "per_epoch": [
      "cpsc_score_adapted",
      "balanced_accuracy",
      "mirco_f1",
      "macro_f1",
      "weighted_f1",
      "macro_roc_auc_ovo",
      "weighted_roc_auc_ovo",
      "macro_roc_auc_ovr",
      "weighted_roc_auc_ovr"
    ],
    "per_epoch_class_wise": [
      "class_wise_f1"
    ],
    "additional_metrics_args": {
      "sigmoid_probs": false,
      "log_probs": true
    }
  },
  "lr_scheduler": {
    "active": true,
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 500,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}
