{
  "name": "BaselineModel_SingleRun",
  "run_details": "_250Hz_60s",
  "n_gpu": 1,
  "arch": {
    "type": "BaselineModel",
    "args": {
      "apply_final_activation": false,
      "multi_label_training": true
    }
  },
  "data_loader": {
    "type": "ECGDataLoader",
    "cross_valid": {
      "enabled": false,
      "k_fold": 10,
      "data_dir": ""
    },
    "args": {
      "data_dir": "data/CinC_CPSC/train/preprocessed/4ms/eq_len_60s",
      "batch_size": 64,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 1,
      "pin_memory": false
    },
    "overfit_single_batch": false,
    "test_dir": "data/CinC_CPSC/test/preprocessed/4ms/eq_len_60s"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": false
    }
  },
  "loss": {
    "type": "BCE_with_logits",
    "add_args": {}
  },
  "metrics": {
    "ml": {
      "per_iteration": {
        "sk_subset_accuracy": ["sigmoid_probs", "logits"]
      },
      "per_epoch": [
        "weighted_sk_f1",
        "macro_sk_f1"
      ],
      "per_epoch_class_wise": [
        "class_wise_sk_f1"
      ]
    },
    "additional_metrics_args": {
      "sigmoid_probs": false,
      "log_probs": false,
      "logits": true
    }
  },
  "lr_scheduler": {
    "active": false
  },
  "trainer": {
    "epochs": 300,
    "save_dir": "savedVM",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_macro_sk_f1",
    "early_stop": 20,
    "tensorboard": true,
    "try_run": false,
    "profiler_active": false
  }
}
