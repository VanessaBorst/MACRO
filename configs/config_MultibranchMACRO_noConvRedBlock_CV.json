{
    "name": "Multibranch_MACRO_CV",
    "run_details": "noconvRedBlock_0.4_8_false_0.4_8",
    "n_gpu": 1,
    "arch": {
        "type": "FinalModelMultiBranch",
        "args": {
            "apply_final_activation": false,
            "multi_label_training": true,
            "branchNet_discard_FC_before_MH": true,
            "branchNet_gru_units": 12,
            "multi_branch_discard_FC_before_MH": true,
            "use_conv_reduction_block": false,
            "branchNet_attention_dropout": 0.4,
            "branchNet_heads": 8,
            "branchNet_reduce_channels": false,
            "multi_branch_attention_dropout": 0.4,
            "multi_branch_heads": 8
        }
    },
  "data_loader": {
    "type": "ECGDataLoader",
    "cross_valid": {
      "enabled": true,
      "k_fold": 10,
      "data_dir": "data/CinC_CPSC/cross_valid/250Hz/60s",
      "stratified_k_fold": false
    },
    "args": {
      "data_dir": "",
      "batch_size": 64,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 4,
      "pin_memory": false
    },
    "overfit_single_batch": false,
    "test_dir": ""
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": false
    }
  },
  "loss": {
    "type": "multi_branch_BCE_with_logits",
    "add_args": {
      "lambda_balance": 1
    }
  },
  "metrics": {
    "ml": {
      "per_iteration": {
        "sk_subset_accuracy": ["sigmoid_probs", "logits"]
      },
      "per_epoch": [
        "cpsc_score",
        "weighted_sk_f1",
        "macro_sk_f1"
      ],
      "per_epoch_class_wise": [
        "class_wise_sk_f1"
      ]
    },
    "additional_metrics_args": {
      "sigmoid_probs": false,
      "log_probs": false,
      "logits": true
    }
  },
  "lr_scheduler": {
    "active": false
  },
  "trainer": {
    "epochs": 300,
    "save_dir": "savedVM/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_macro_sk_f1",
    "early_stop": 20,
    "tensorboard": true,
    "try_run": false,
    "profiler_active": false
  }
}
