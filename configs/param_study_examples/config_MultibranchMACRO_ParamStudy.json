{
  "name": "Multibranch_MACRO_ParamStudy",
  "run_details": "convRedBlock_0.2_6_false_0.2_24",
  "n_gpu": 1,
  "arch": {
    "type": "FinalModelMultiBranch",
    "args": {
      "apply_final_activation": false,
      "multi_label_training": true,
      "branchNet_gru_units": 12,
      "use_conv_reduction_block": true,
      "branchNet_attention_dropout": 0.2,
      "branchNet_heads": 6,
      "branchNet_reduce_channels": false,
      "multi_branch_attention_dropout": 0.2,
      "multi_branch_heads": 24
    }
  },
  "data_loader": {
    "type": "ECGDataLoader",
    "cross_valid": {
      "enabled": false
    },
    "args": {
      "data_dir": "data/CinC_CPSC/train/preprocessed/4ms/eq_len_60s",
      "batch_size": 64,
      "shuffle": true,
      "validation_split": 0.25,
      "num_workers": 4,
      "pin_memory": false
    },
    "overfit_single_batch": false,
    "test_dir": "data/CinC_CPSC/test/preprocessed/4ms/eq_len_60s"
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": false
    }
  },
  "loss": {
    "type": "multi_branch_BCE_with_logits",
    "add_args": {
      "lambda_balance": 1
    }
  },
  "metrics": {
    "ml": {
      "per_iteration": {
        "sk_subset_accuracy": ["sigmoid_probs", "logits"]
      },
      "per_epoch": [
        "cpsc_score",
        "weighted_sk_f1",
        "macro_sk_f1"
      ],
      "per_epoch_class_wise": [
        "class_wise_sk_f1"
      ]
    },
    "additional_metrics_args": {
      "sigmoid_probs": false,
      "log_probs": false,
      "logits": true
    }
  },
  "lr_scheduler": {
    "active": false
  },
  "trainer": {
    "epochs": 300,
    "save_dir": "savedVM/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "max val_macro_sk_f1",
    "early_stop": 20,
    "minimum_diff_for_improvement": 0.001,
    "tensorboard": true,
    "try_run": false,
    "profiler_active": false
  }
}
