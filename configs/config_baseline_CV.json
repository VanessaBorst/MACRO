{
    "name": "BaselineModel_CV",
    "run_details": "_250Hz_60s_focal_loss_new",
    "n_gpu": 1,
    "arch": {
        "type": "BaselineModel",
        "args": {
            "apply_final_activation": false,
            "multi_label_training": true
        }
    },
    "data_loader": {
        "type": "ECGDataLoader",
        "cross_valid": {
            "enabled": true,
            "k_fold": 10,
            "data_dir": "data/CinC_CPSC/cross_valid/250Hz/60s"
        },
        "args": {
            "data_dir": "",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.25,
            "num_workers": 4,
            "pin_memory": false
        },
        "overfit_single_batch": false,
        "test_dir": ""
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": false
        }
    },
    "loss": {
        "type": "focal_loss",
        "add_args": {}
    },
    "metrics": {
        "ml": {
            "per_iteration": {
                "sk_subset_accuracy": [
                    "sigmoid_probs",
                    "logits"
                ]
            },
            "per_epoch": [
                "weighted_sk_f1",
                "macro_sk_f1"
            ],
            "per_epoch_class_wise": [
                "class_wise_sk_f1"
            ]
        },
        "additional_metrics_args": {
            "sigmoid_probs": false,
            "log_probs": false,
            "logits": true
        }
    },
    "lr_scheduler": {
        "active": false
    },
    "trainer": {
        "epochs": 300,
        "save_dir": "savedVM",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "max val_macro_sk_f1",
        "early_stop": 20,
        "tensorboard": true,
        "try_run": false,
        "profiler_active": false
    }
}